<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:paddingStart="10dp"
        android:layout_marginEnd="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_answer_answer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:paddingRight="8dp"
            android:textStyle="bold"
            android:text="hhdtdhdhhtddjdtjdtjdtjdtjtjktkttdkdykykdttjtjdjjjdtjtjdtjtjdtjdtjj"
            android:textSize="16sp"
            android:layout_weight="12"
            android:paddingBottom="8dp"/>

        <ImageView
            android:id="@+id/imgView_delete__answer"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#ff0000"
            android:src="@drawable/ic_delete_black_24dp"
            android:visibility="gone"/>
    </LinearLayout>

        <TextView
            android:id="@+id/text_user_date_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="by John on 2020:03:20"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>